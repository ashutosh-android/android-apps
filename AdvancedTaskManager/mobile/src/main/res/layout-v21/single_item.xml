<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="@dimen/lists_row_height"
                android:layout_margin="2dp"
                android:background="@android:color/white"
                android:clickable="false"
                android:descendantFocusability="blocksDescendants"
                android:focusable="false"
                android:foreground="?selectableItemBackground"
                android:gravity="center_vertical"
                android:paddingLeft="@dimen/margin_small"
                android:paddingStart="@dimen/margin_small">

    <TextView
            android:id="@+id/text_view_item_name"
            style="@style/ListItemText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="ToDo Item 1"
            android:textStyle="bold"/>


    <TextView
            android:id="@+id/text_view_item_edit_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/text_view_item_name"
            android:layout_marginEnd="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="2dp"
            android:textColor="@color/light_black"
            android:textSize="@dimen/list_created_by_text_size"
            android:hint="23/03/2016"
            android:textStyle="italic"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text_view_work_item_status"
            android:layout_toRightOf="@+id/text_view_item_edit_time"
            android:hint="ToDO"
            android:textColor="@color/google"
            android:layout_marginLeft="5dp"
            android:layout_alignTop="@+id/text_view_item_edit_time"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mark Done"
            android:id="@+id/button_item_update" android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            style="@android:style/Widget.Material.Light.Button" 
            android:background="#ea6868"
            android:padding="5dp"/>
</RelativeLayout>